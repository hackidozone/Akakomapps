<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jurusan_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="community.rasckspira.akakomapps.JurusanDetailActivity">
    <ImageView
        android:id="@+id/featured_jurusan"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="-5dp"
        />
    <include
        android:id="@+id/tolbar"
        layout="@layout/app_bar_transparent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/featured_jurusan">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="-5dp"
                android:background="@color/colorBackTransparent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/judul_jurusan"
                android:text="ini judul"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textIsSelectable="false" />
            </RelativeLayout>
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deskripsi_jurusan"
                android:textColor="@color/colorGray"
                android:text="ini detail"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:layout_gravity="center_vertical" />
            <Button
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/btn_more_jurusan"
                android:background="@color/colorPrimary"
                android:text="Lihat selengkapnya"
                android:padding="15dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
