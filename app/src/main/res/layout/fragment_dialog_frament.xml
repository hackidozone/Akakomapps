<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorItemRed"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang Aplikasi"
            android:padding="12dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="20dp"
                android:src="@mipmap/ic_launcher"
                android:layout_weight="1.34" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/colorGrayPrimary"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="versi 1.0"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                android:padding="6dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Aplikasi ini dikembangkan oleh"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center|center_vertical"
                android:layout_weight="1.11" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/rackspira"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://rackspira.community"
                android:textColor="@color/colorGreen"
                android:textSize="18sp"
                android:padding="6dp"
                android:textStyle="bold|italic"
                android:id="@+id/url" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello@rackspira.community"
                android:textColor="@color/colorGreen"
                android:textSize="18sp"
                android:padding="6dp"
                android:textStyle="bold|italic"
                android:id="@+id/email" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
